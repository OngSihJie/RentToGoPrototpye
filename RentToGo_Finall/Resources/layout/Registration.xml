<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create An Account"
             android:textAlignment="center"
        android:layout_margin="5dp" 
             android:id="@+id/textView2"/>
        
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your Name: "
            android:paddingLeft="7dip"
            android:id="@+id/name"
                android:layout_margin="2dp" 
        android:textSize="18sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_margin="5dp" 
            android:id="@+id/createcustname"/> 
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Username: "
            android:paddingLeft="7dip"
            android:id="@+id/createusrname"
                android:layout_margin="2dp" 
        android:textSize="18sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_margin="5dp" 
            android:id="@+id/createcustusername"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Phone Number: "
            android:paddingLeft="7dip"
            android:id="@+id/phnnumber"
                android:layout_margin="2dp" 
        android:textSize="18sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_margin="5dp" 
            android:id="@+id/createcustphn"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Address: "
            android:paddingLeft="7dip"
            android:id="@+id/address"
            android:layout_margin="2dp" 
            android:textSize="18sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_margin="5dp" 
            android:id="@+id/createcustaddress"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Password:"
            android:paddingLeft="7dip"
            android:id="@+id/usrpswrd"
            android:layout_margin="2dp" 
            android:textSize="18sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_margin="5dp" 
            android:id="@+id/createcustpassword"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register!!!"
        android:id="@+id/btnrgstration"
        android:layout_margin="10dp" 
        android:layout_weight="0.01"/>



</LinearLayout>
